<header>
    <div class="logo">
        <a href="/"><img src="/img/logo.png" width="40" height="40" alt="Logo"></a>
    </div>
    <nav>
        <a href="/"><%= t('header.nav.home') %></a>
        <% if (!user) { %>
        <a href="/login"><%= t('header.nav.login') %></a>
        <a href="/register"><%= t('header.nav.register') %></a>
        <% } else { %>
        <a href="/profile"><%= t('header.nav.profile') %></a>
        <% if (user.role === 'admin') { %>
        <a href="/admin"><%= t('header.nav.admin') %></a>
        <% } %>
        <a href="/logout"><%= t('header.nav.logout') %></a>
        <% } %>
    </nav>
    <div class="language-selector">
        <button onclick="setLang('ru')">
            <img src="/img/ruLang.png" width="40" alt="Russian laguage">
        </button>
        <button onclick="setLang('en')">
            <img src="/img/enLang.png" width="40" alt="English laguage">
        </button>
    </div>
</header>