<header>
    <div class="logo">
        <a href="/"><img src="/img/logo.png" width="40" height="40" alt="Logo"></a>
    </div>
    <nav>
        <a href="/" class="<%= currentPath === '/' ? 'active' : '' %>"><%= t('header.nav.home') %></a>
        <a href="/chats" class="<%= currentPath.startsWith('/chats') ? 'active' : '' %>"><%= t('header.nav.chats') %></a>
        <% if (!user) { %>
        <a href="/login" class="<%= currentPath === '/login' ? 'active' : '' %>"><%= t('header.nav.login') %></a>
        <a href="/register" class="<%= currentPath === '/register' ? 'active' : '' %>"><%= t('header.nav.register') %></a>
        <% } else { %>
        <a href="/profile" class="<%= currentPath === '/profile' ? 'active' : '' %>"><%= t('header.nav.profile') %></a>
        <% if (user.role === 'admin') { %>
        <a href="/admin" class="<%= currentPath.startsWith('/admin') ? 'active' : '' %>"><%= t('header.nav.admin') %></a>
        <% } %>
        <a href="/logout" class="<%= currentPath === '/logout' ? 'active' : '' %>"><%= t('header.nav.logout') %></a>
        <% } %> 
    </nav>
    <div class="language-selector">
        <button onclick="setLang('ru')">
            <img src="/img/ruLang.png" width="40" alt="Russian language">
        </button>
        <button onclick="setLang('en')">
            <img src="/img/enLang.png" width="40" alt="English language">
        </button>
    </div>
</header>