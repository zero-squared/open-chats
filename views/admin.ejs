<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= t('websiteTitle') %> | <%= t('adminPage.title') %></title>
    <link rel="icon" type="image/png" href="/img/logo.png" />
    <%- include('partials/common'); -%>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <%- include('partials/header'); -%>
    <main>
        <div class="side-panel">
            <div class="tab-link">
                <a href="/admin/users"><%= t('adminPage.tabs.users.title') %></a>
            </div>
            <div class="tab-link">
                <a href="/admin/chats"><%= t('adminPage.tabs.chats.title') %></a>
            </div>
        </div>
        <div class="tab-content">
            <% if (tabName === 'main') { %>
                <%- include('adminTabs/main'); -%>
            <% } else if (tabName === 'users') { %>
                <%- include('adminTabs/users'); -%>
            <% } else if (tabName === 'chats') { %>
                <%- include('adminTabs/chats'); -%>
            <% } %>
        </div>
    </main>
</body>
</html>